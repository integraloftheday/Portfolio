<section>
  <div class="project-grid">
    {% for post in projectlist %}
      {% if (not show_select_projects) or post.data.show  %}
        <div class="project-card" {% if post.url == url %} data-current="current item"{% endif %}>
          <h4>
            <a class="project-card__title" style = "vertical-align: bottom;" href="{{ post.url | url }}">
              {% if post.data.image %}
                <img  style="margin-bottom:0" class="project-card__emoji"src="{{ post.data.image }}" width = "30" height ="30" alt="{{ post.title }}" />
              {% else %}
              {% if post.data.title %}
                <span class="project-card__emoji">{{ post.data.emoji }} </span>
              {% endif %}
              {% endif %}
              {% if post.data.title %}
                {{ post.data.title }}
              {% else %}
                Untitled
              {% endif %}
            </a>
          </h4>
          {% if post.data.summary %}
            <p>
              {{ post.data.summary }}
            </p>
          {% endif %}
          {% if post.data.tags %}
            <p class="tag-list">
              {% for tag in post.data.tags %}
                {%- if tag != "project" -%}
                  {% set tagUrl %}/project-tags/{{ tag }}/{% endset %}
                <a class="project-card__tag tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                {%- endif -%}
              {% endfor %}
            </p>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
